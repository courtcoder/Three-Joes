<div class="container xcolumns mx-auto">

  <div class="signup-panel">
    <form class="signup-form p-2">
      <div>
        <h1>Signup</h1>
      </div>
      <div>
        <input
          class="p-3"
          type="text"
          id="username-signup"
          placeholder="Username"
        />
      </div>
      <div>
        <input
          class="p-3"
          type="text"
          id="first-name-signup"
          placeholder="First name"
        />
      </div>
      <div>
        <input
          class="p-3"
          type="text"
          id="last-name-signup"
          placeholder="Last name"
        />
      </div>
      <div>
        <input class="p-3" type="text" id="email-signup" placeholder="Email" />
      </div>
      <div>
        <input
          class="p-3"
          type="password"
          id="password-signup"
          placeholder="Password"
        />
      </div>
      <div>
        <button class="button is-info" type="submit">Sign Up</button>
      </div>
    </form>
  </div>

</div>

<script src="/javascript/signup.js"></script>